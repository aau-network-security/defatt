                <p class="p-2">Scenario 1: -</p>
                <p class="break-all text-gray-600 max-w-3xl">
                    __________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________
                </p>
                <p class="break-all text-gray-600 max-w-3xl">
                    __________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________
                </p>
            </div>
        </div>


        <div class="flex justify-end mt-16 w-9/12">
            <div class="place-self-center">
                <a href="#" onclick="doClick(); return false;" class="bg-zinc-200 hover:bg-gray-400 text-gray-600 text-center py-6 px-24 rounded shadow-lg mb-44">NEXT <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>


    <script>
        function doClick() {
            const queryString = window.location.search;
            const urlParams = new URLSearchParams(queryString);

            if (urlParams.get('team') == "BLUE")
                window.location.href = "./blue.html";
            else
                window.location.href = "./redTwo.html";
        }
    </script>
