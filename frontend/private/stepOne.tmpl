{{ define "content" }}
    <!-- Logo in top corner of screen IT is absolote until lg and then hidden  -->
    <div class="absolute hidden md:inline  mt-10 ml-10">
        <img src="http://cybertraining.dk/defatt.png" alt="Defatt's Logo" style="max-height: 220px">
    </div>

    <div class="flex flex-col h-screen w-screen justify-center items-center place-items-center">
        <div class="grid grid-cols-1 w-9/12 h-3/4 place-items-center bg-zinc-200">
            <h1 class="md:mt-24 text-4xl text-gray-600">STEP 1: Choose the team</h1>
            {{range $error := .Errors}}
                <div class="flex justify-between alert-{{$error.Level.String}} border px-4 py-3 rounded relative mb-4" role="alert">
                    {{$error.Message}}
                    <strong class="text-xl align-center cursor-pointer alert-del"> &times; </strong>
                </div>
            {{end}}
            <p class="text-gray-600 max-w-xl">The first time you logged in into the platform, you must choose the team you want to start in: red or blue. After the first challenge, the system will automatically assign you to the team, so if you you choose the red team in the next challenge
                you have to play blue team </p>
            <a id="RED" href="#RED" class="bg-gray-300 hover:bg-gray-400 text-gray-600 text-center py-4 px-20 rounded">RED</a>
            <a id="BLUE" href="#BLUE" class="bg-gray-300 hover:bg-gray-400 text-gray-600 text-center py-4 px-20 rounded mb-44">BLUE </a>
        </div>
        <div class="flex justify-end mt-16 w-9/12">
            <div class="place-self-center">
                <a href="#" onclick="doClick(); return false;" class="bg-zinc-200 hover:bg-gray-400 text-gray-600 text-center py-6 px-24 rounded shadow-lg mb-44">NEXT <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
    <script>
        function doClick() {
            console.log(window.location.hash)
            if (window.location.hash == '#BLUE')
                window.location.href = "/stepTwo?team=blue";
            else if (window.location.hash == "#RED")
                window.location.href = "/stepTwo?team=red";
            else
                window.location.href = "/stepTwo?team=no";
        }
    </script>
{{ end }}
